<h1>Search for "<%= @query %>"</h1>

<table border="1">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Rank</th>
  </tr>

  <% @recipes.each do |recipe| %>
  <tr>
    <td><%= image_tag recipe["image_url"], size: "250x120" %></td>
    <td><%= recipe["title"] %></td>
    <td><%= recipe["social_rank"] %></td>
  </tr>
  <% end %>
  
</table>
