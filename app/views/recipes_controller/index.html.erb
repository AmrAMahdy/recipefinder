<h1>Search for <%= @query %></h1>

<table border="1">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <th>Rank</th>
  </tr>

  <% @recipes.each do |recipe| %>
  <tr>
    <td><%= link_to (image_tag recipe["image_url"], width: "100", height: "100"), recipe["f2f_url"] %></td>
    <td><%= link_to sanitize(recipe["title"]), recipe["f2f_url"] %></td>
    <td><%= recipe["social_rank"] %></td>
  </tr>
  <% end %>
  
</table>
